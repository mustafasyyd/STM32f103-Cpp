#include "gpio.hpp"


typedef enum PORTS
{
	PORTA = 2,
	PORTB	 ,
	PORTC 	 ,
	PORTD 	 ,
	PORTE 	 ,
	PORTF 	 ,
	PORTG

}PORTS;


typedef enum PINS
{
	PIN_0 = 0,
	PIN_1    ,
	PIN_2    ,
	PIN_3  	 ,
	PIN_4  	 ,
	PIN_5  	 ,
	PIN_6  	 ,
	PIN_7  	 ,
	PIN_8  	 ,
	PIN_9  	 ,
	PIN_10 	 ,
	PIN_11 	 ,
	PIN_12 	 ,
	PIN_13 	 ,
	PIN_14 	 ,
	PIN_15 	 ,

}PINS;



class PORTCONFIG
{
	public:
	PORTCONFIG();
	~PORTCONFIG();
	PORTCONFIG ( GPIO_TypeDef* gpio , PORTS PORT , PINS PIN);
	void write_pin(uint8_t logic);
	uint32_t read_pin();

	private:
	GPIO_TypeDef* gpio;
	PORTS port;
	PINS pin;
};

